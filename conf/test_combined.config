params {
    // Test parameters for GitHub Actions CI
    fasta        = 'test-data/test.fasta'
    spectra_dir  = 'test-data'
    magnum_conf  = 'example_files/Magnum.conf'

    // whether or not to upload to limelight
    limelight_upload = true

    // limelight upload parameters
    limelight_webapp_url         = 'foo'
    limelight_project_id         = 0
    limelight_search_description = 'foo'
    limelight_search_short_name  = 'bar'
    limelight_tags               = 'stubs'

    process_separately = false
}

profiles {

    // params for running pipeline locally
    standard {
        params.max_memory = '4.GB'
        params.max_cpus = 2
        params.max_time = '1.h'

        params.mzml_cache_directory = './mzml_cache'
        params.panorama_cache_directory = './raw_cache'
    }
}
